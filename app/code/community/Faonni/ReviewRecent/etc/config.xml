<config>
	<modules>
		<Faonni_ReviewRecent>
			<version>1.1.3</version>
		</Faonni_ReviewRecent>
	</modules>
	<global>
		<blocks>
			<faonni_reviewrecent>
				<class>Faonni_ReviewRecent_Block</class>
			</faonni_reviewrecent>
		</blocks>		
		<helpers>
			<faonni_reviewrecent>
				<class>Faonni_ReviewRecent_Helper</class>
			</faonni_reviewrecent>
		</helpers>
		<models>
            <faonni_reviewrecent>
                <class>Faonni_ReviewRecent_Model</class>
            </faonni_reviewrecent>            
        </models>
		<resources>
			<faonni_reviewrecent_setup>
				<setup>
					<module>Faonni_ReviewRecent</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</faonni_reviewrecent_setup>
			<faonni_reviewrecent_write>
				<connection>
					<use>core_write</use>
				</connection>
			</faonni_reviewrecent_write>
			<faonni_reviewrecent_read>
				<connection>
					<use>core_read</use>
				</connection>
			</faonni_reviewrecent_read>
		</resources>
	</global>
    <frontend>	
		<layout>
			<updates>
				<faonni_reviewrecent>
					<file>faonni/reviewrecent.xml</file>
				</faonni_reviewrecent>
			</updates>
		</layout>		
    </frontend>	
    <default>
        <catalog>
            <review>
                <active_sidebar>1</active_sidebar>
				<sidebar_area>left</sidebar_area>
				<sidebar_review_count>3</sidebar_review_count>
            </review>
        </catalog>
    </default>	
</config> 