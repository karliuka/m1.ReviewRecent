        <reference name="head">
			<action method="addItem"><type>skin_css</type><name>css/reviewrecent.css</name></action>			
        </reference>	
		<reference name="left">
			<block type="faonni_reviewrecent/list" name="left.reviews" template="faonni/reviewrecent/list.phtml" />
		</reference>
		<reference name="right">
			<block type="faonni_reviewrecent/list" name="right.reviews" template="faonni/reviewrecent/list.phtml" />
		</reference>		
    </default>
	<!--
	End updates
	-->		
</layout>
